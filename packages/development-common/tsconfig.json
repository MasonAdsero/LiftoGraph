{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "dist",
        "removeComments": true,
        "target": "ES6",

        "baseUrl": "./",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "sourceMap": true,
        "sourceRoot": "/",

        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": ["node_modules/**/*"]
}
